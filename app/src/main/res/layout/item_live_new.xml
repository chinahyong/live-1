<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_live_new_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_live_new_photo"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/a_bg_color_333333"
        android:textSize="@dimen/a_text_size_36"
        android:textStyle="bold"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/item_tv_title"
                  android:layout_marginTop="4dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a_bg_color_989898"
            android:textSize="@dimen/a_text_size_30"/>

        <View android:layout_width="3dp"
              android:layout_height="3dp"
              android:layout_marginLeft="3dp"
              android:background="@drawable/a_bg_live_new_point"/>

    </LinearLayout>

</RelativeLayout>