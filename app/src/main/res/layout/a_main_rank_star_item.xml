<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <ImageView
            android:id="@+id/item_rank_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_rank_3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_fm_rank_field_photo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dip"
            android:layout_toRightOf="@id/item_rank_no"
            android:background="@drawable/trans_bg"
            android:contentDescription="@string/app_name"
            android:padding="2dip"
            android:src="@drawable/bg_user_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_fm_rank_field_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_fm_rank_field_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42" />

            <LinearLayout
                android:id="@+id/item_money_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_fm_rank_field_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6.66dip"
                    android:text="9999"
                    android:textColor="@color/a_text_color_999999"
                    android:textSize="@dimen/a_text_size_30" />

                <TextView
                    android:id="@+id/icon_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:text="克拉"
                    android:textColor="@color/a_text_color_999999"
                    android:textSize="@dimen/a_text_size_30" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_user_level"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/userlevel_0"
            android:visibility="visible" />

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>