<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/a_bg_color_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <ImageView
            android:id="@+id/category_logo"
            android:layout_width="33.33dp"
            android:layout_height="33.33dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.33dp"
            android:layout_toRightOf="@id/category_logo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男神养成记"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/category_post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commutity_catelory_post_count"
                    android:textColor="@color/a_text_color_aaaaaa"
                    android:textSize="@dimen/a_text_size_30" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="@dimen/a_text_size_30"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/a_text_color_aaaaaa" />

                <TextView
                    android:id="@+id/category_replay_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commutity_catelory_replay_count"
                    android:textColor="@color/a_text_color_aaaaaa"
                    android:textSize="@dimen/a_text_size_30" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dip"
        android:layout_marginTop="18dip"
        android:background="@drawable/tab_bg_k"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/community_new_replay"
            android:layout_width="@dimen/community_hot_width"
            android:layout_height="28dip"
            android:background="@drawable/select_radio_left"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bg_new_replay_selector"
                android:drawablePadding="10dip"
                android:text="@string/commutity_catelory_new_replay"
                android:textColor="@color/a_text_ffa200_ffffff_selector"
                android:textSize="@dimen/a_text_size_36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_hot"
            android:layout_width="@dimen/community_hot_width"
            android:layout_height="28dip"
            android:background="@drawable/select_radio_right"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bg_hot_selector"
                android:drawablePadding="10dip"
                android:text="@string/commutity_catelory_hot"
                android:textColor="@color/a_text_ffa200_ffffff_selector"
                android:textSize="@dimen/a_text_size_36" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/a_bg_color_f0f0f0" />

</LinearLayout>