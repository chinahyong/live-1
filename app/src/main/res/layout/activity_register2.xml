<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="com.bixin.bixin.activities.Register2Activity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/a_bg_top_bar_color"
        android:layout_height="@dimen/layout_top_title_bg_height"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:id="@+id/register2_top_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/login_top_left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/a_common_btn_back_selector"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register2"
            android:textColor="@color/a_text_color_ffffff"
            android:textSize="@dimen/a_text_size_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register2_ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="43.33dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/login_et_bg_2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_iv_nickname"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_login_account"/>

        <EditText
            android:id="@+id/register2_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/register_iv_nickname"
            android:background="@color/trans"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/register_input_nickname"
            android:maxLength="10"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/a_text_color_cc959595"
            android:textColorHint="@color/a_text_color_cc959595"
            android:textSize="@dimen/a_text_size_46">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register2_ll_nickname"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_et_bg_2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/register_iv_psw"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_login_pwd"/>

        <EditText
            android:id="@+id/register2_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/register_iv_psw"
            android:background="@color/trans"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/register_input_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/a_text_color_cc959595"
            android:textColorHint="@color/a_text_color_cc959595"
            android:textSize="@dimen/a_text_size_46">
        </EditText>
    </RelativeLayout>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/register2_ll_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:id="@+id/register2_rb_male"
                android:layout_width="13.33dp"
                android:layout_height="13.33dp"
                android:background="@drawable/selector_radio"
                android:button="@null"
                android:clickable="false"/>

            <TextView
                android:id="@+id/register2_tv_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/male"
                android:textColor="@color/a_text_color_959595"
                android:textSize="@dimen/a_text_size_36"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register2_ll_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/register2_rb_female"
                android:layout_width="13.33dp"
                android:layout_height="13.33dp"
                android:background="@drawable/selector_radio"
                android:button="@null"
                android:clickable="false"/>

            <TextView
                android:id="@+id/register2_tv_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/female"
                android:textColor="@color/a_text_color_959595"
                android:textSize="@dimen/a_text_size_36"/>
        </LinearLayout>
    </RadioGroup>

    <Button
        android:id="@+id/register2_btn_submit"
        android:layout_width="300dip"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_login_bg_selector"
        android:text="@string/submit"
        android:textColor="@color/a_text_ffffff_959595_selector"
        android:textSize="@dimen/a_text_size_48"/>

</LinearLayout>