<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
>
    <ImageView
        android:id="@+id/pop_filter_xiaosanjiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125.67dp"
        android:src="@drawable/xialakuangsanjiao"
        android:translationZ="5dp"/>


    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="148.33dp"
        android:layout_below="@id/pop_filter_xiaosanjiao"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg_filter_popupwindow"
        android:orientation="vertical"
        android:translationZ="5dp">

        <LinearLayout
            android:id="@+id/filter_sended"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
        >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_yifasong"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9.33dp"
                android:text="@string/pop_filter_sended"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_never_Send"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
        >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_weifasong"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9.33dp"
                android:text="@string/pop_filter_never_send"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_all"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/filter_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="@string/pop_filter_all"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/filter_all_text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="122dp"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="105dp"
        android:background="#dddddd"
        android:translationZ="5dp"></View>
    <View
        android:layout_width="122dp"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="55.3dp"
        android:background="#dddddd"
        android:translationZ="5dp"></View>
</RelativeLayout>