<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/subject_list_item_selector"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" >

        <ImageView
            android:id="@+id/item_fanquan_logo"
            android:layout_width="50.33dp"
            android:layout_height="50.33dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_user_default"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_fanquan_logo_lock"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_user_default"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/icon_lock_1" />

        <RelativeLayout
            android:id="@+id/item_fanquan_nickname_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/item_fanquan_logo" >

            <TextView
                android:id="@+id/item_fanquan_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股水电"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_40" />

            <ImageView
                android:id="@+id/item_fanquan_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fanquan_nickname"
                android:layout_marginTop="3dip"
                android:src="@drawable/quan_lock_nor" />

            <TextView
                android:id="@+id/item_fanquan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_fanquan_lock"
                android:layout_alignTop="@id/item_fanquan_lock"
                android:layout_marginLeft="5.33dip"
                android:layout_toRightOf="@id/item_fanquan_lock"
                android:gravity="center_vertical"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_30" />

            <TextView
                android:id="@+id/item_fanquan_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fanquan_lock"
                android:layout_marginTop="4dip"
                android:background="@drawable/icon_quan_bg"
                android:gravity="center"
                android:text="@string/commutity_fan_host"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_36" />

            <TextView
                android:id="@+id/item_fanquan_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_fanquan_host"
                android:layout_alignTop="@id/item_fanquan_host"
                android:layout_marginLeft="5.33dip"
                android:layout_toRightOf="@id/item_fanquan_host"
                android:gravity="center_vertical"
                android:textColor="@color/a_text_color_b0b0b0"
                android:textSize="@dimen/a_text_size_30" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_fanquan_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="4dip"
            android:paddingLeft="4dip"
            android:paddingRight="0dip"
            android:paddingTop="4dip"
            android:src="@drawable/btn_invite_selector" />
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

</LinearLayout>