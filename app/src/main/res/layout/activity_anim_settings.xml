<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_anim_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical">

    <include layout="@layout/a_common_top_bar"/>

    <RelativeLayout
        android:id="@+id/anim_settings_rl_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/a_text_color_ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/anim_settings_tv_superior"
            android:layout_width="wrap_content"
            android:layout_height="46.66dp"
            android:gravity="center_vertical"
            android:text="@string/anim_setting_superior"
            android:textColor="@color/a_text_333333_999999_selector"
            android:textSize="@dimen/a_text_size_42"/>

        <ImageView
            android:id="@+id/anim_settings_superior_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_anim_setting_selected"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <RelativeLayout
        android:id="@+id/anim_settings_rl_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a_text_color_ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/anim_settings_tv_none"
            android:layout_width="wrap_content"
            android:layout_height="46.66dp"
            android:gravity="center_vertical"
            android:text="@string/anim_setting_none"
            android:textColor="@color/a_text_333333_999999_selector"
            android:textSize="@dimen/a_text_size_42"/>

        <ImageView
            android:id="@+id/anim_settings_none_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_anim_setting_selected"
            android:visibility="gone"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14.66dp"
        android:text="@string/anim_setting_intro"
        android:textColor="@color/a_text_color_999999"
        android:textSize="@dimen/a_text_size_36"/>
</LinearLayout>
