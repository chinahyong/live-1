<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/a_bg_corner_ffffff_f0f0f0_selector"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip">

            <ImageView
                android:id="@+id/item_photo"
                android:layout_width="33.33dp"
                android:layout_height="33.33dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/item_photo_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_photo"
                android:layout_alignRight="@+id/item_photo"
                android:src="@drawable/ic_icon_v"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.66dip"
                android:layout_toRightOf="@id/item_photo">

                <TextView
                    android:id="@+id/item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股水电"
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_36"/>

                <ImageView
                    android:id="@+id/item_userlevel"
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/item_nickname"
                    android:src="@drawable/userlevel_0"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_nickname"
                    android:layout_marginTop="3dip"
                    android:text="刚刚"
                    android:textColor="@color/a_text_color_b4b4b4"
                    android:textSize="@dimen/a_text_size_24"/>

                <LinearLayout
                    android:id="@+id/item_status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/item_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/icon_fan_top"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/item_recomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/icon_fan_recoment"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/item_moudle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_stroke_da500e"
                        android:gravity="center"
                        android:paddingLeft="5.33dip"
                        android:paddingRight="5.33dip"
                        android:textColor="@color/a_text_787878_60_selector"
                        android:textSize="@dimen/a_text_size_30"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_picture_grid"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_below="@id/item_top_layout"
            android:layout_marginTop="12dip"
            android:scaleType="centerCrop"
            android:visibility="gone">
        </ImageView>

        <ImageView
            android:id="@+id/item_picture_long_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_picture_grid"
            android:layout_alignRight="@id/item_picture_grid"
            android:src="@drawable/icon_long_tip"
            android:visibility="gone">
        </ImageView>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_picture_grid"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:lineSpacingExtra="3dip"
            android:maxLines="2"
            android:text="水电费啥地方了就阿斯顿发了发大水了打飞机水电费收代理费说当发生打发斯蒂芬阿斯顿浪费阿斯顿发了阿斯顿浪费阿斯顿浪费阿斯顿浪费阿斯顿浪费静安寺打发斯蒂芬啊沙发了打死飞拉萨的地方啦放大拉菲打了饭安定了对方阿德勒发生打了饭艾斯黛拉发送到发"
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_36"/>

        <View
            android:id="@+id/item_divider"
            style="@style/divider_horizontal"
            android:layout_below="@id/item_content"
            android:layout_marginTop="10dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/item_divider"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip">

            <ImageView
                android:id="@+id/item_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="6dip"
                android:src="@drawable/bg_parise_btn_selector"/>

            <TextView
                android:id="@+id/item_support_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/item_support"
                android:text="1218"
                android:textColor="@color/a_text_color_ababab"
                android:textSize="@dimen/a_text_size_30"/>

            <View
                android:id="@+id/item_line1"
                style="@style/divider_vertical"
                android:layout_height="22dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_support_num"/>

            <TextView
                android:id="@+id/item_replay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_line1"
                android:drawableLeft="@drawable/btn_comments_nor"
                android:drawablePadding="8dip"
                android:gravity="center_vertical"
                android:text="1212"
                android:textColor="@color/a_text_color_ababab"
                android:textSize="@dimen/a_text_size_30"/>

            <View
                android:id="@+id/item_line2"
                style="@style/divider_vertical"
                android:layout_height="22dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_replay_num"/>

            <ImageView
                android:id="@+id/item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/item_line2"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="6dip"
                android:src="@drawable/btn_post_share_selector"/>

            <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:padding="6dip"
                android:src="@drawable/btn_fan_post_more_selector"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>