<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43.33dp"
        android:background="@color/a_bg_color_ffffff" >

        <TextView
            android:id="@+id/invite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/invite_me_id"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/invite_id_success"
            android:textColor="@color/a_text_color_b4b4b4"
            android:textSize="@dimen/a_text_size_30" />
    </RelativeLayout>

</LinearLayout>