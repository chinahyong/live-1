<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gifts_bottom_info_ll_1"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <View
        android:id="@+id/item_line_right"
        android:layout_width="0.5dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="@color/a_bg_color_1e1e1e" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/a_bg_color_1e1e1e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_gift_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="1个"
            android:textColor="@color/a_text_color_dcdcdc"
            android:textSize="@dimen/a_text_size_45" />

        <TextView
            android:id="@+id/item_gift_tv_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="一心一意"
            android:textColor="@color/a_text_color_b4b4b4"
            android:textSize="@dimen/a_text_size_33" />
    </LinearLayout>

</RelativeLayout>