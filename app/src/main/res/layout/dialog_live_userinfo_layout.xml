<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trans_bg">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.66dip"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_user_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_manage_selector"/>

            <ImageView
                android:id="@+id/item_user_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_report_person_selector"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dip"
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_30"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dip"
            android:gravity="center">

            <TextView
                android:id="@+id/item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:textColor="@color/a_text_color_da500e"
                android:textSize="@dimen/a_text_size_42"/>

            <LinearLayout
                android:id="@+id/item_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/item_user_name"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_user_verifiedinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:textColor="@color/a_text_color_eaaf22"
            android:textSize="@dimen/a_text_size_32"
            android:visibility="gone">
        </TextView>

        <ProgressBar
            android:id="@+id/item_level_progress"
            style="@style/ProgressBar_Play_Horizontal"
            android:layout_width="146.66dip"
            android:layout_height="8dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dip"
            android:max="100"
            android:progress="0"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_level_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_30"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_user_intro"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dip"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3dip"
            android:text=""
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_36"/>

        <Button
            android:id="@+id/item_focus"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dip"
            android:background="@drawable/btn_focus_selector"/>

        <LinearLayout
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dip"
            android:layout_marginTop="18dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_flower_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_flower_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_42"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="@string/live_flower_tip"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_36"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_fans_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_42"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="@string/person_fans"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_36"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_focus_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_focus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_42"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="@string/person_focus"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_36"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/item_line"
            style="@style/divider_horizontal"/>

        <LinearLayout
            android:id="@+id/item_speak_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/item_speak"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/item_speak"
                android:text="@string/live_speak_tip"
                android:textColor="@color/a_text_da500e_60_selector"
                android:textSize="@dimen/a_text_size_42"/>

            <View style="@style/divider_vertical"/>

            <Button
                android:id="@+id/item_line_user"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/live_line_user"
                android:textColor="@color/a_text_da500e_60_selector"
                android:textSize="@dimen/a_text_size_42"/>

            <View style="@style/divider_vertical"/>

            <ImageButton
                android:id="@+id/item_chat"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/item_chat"
                android:text="@string/live_chat_tip"
                android:textColor="@color/a_text_da500e_60_selector"
                android:textSize="@dimen/a_text_size_42"/>

            <View style="@style/divider_vertical"/>

            <ImageButton
                android:id="@+id/item_person_info"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/item_person_info"
                android:text="@string/live_person_info_tip"
                android:textColor="@color/a_text_da500e_60_selector"
                android:textSize="@dimen/a_text_size_42"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_head"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_bg_circle"
            android:contentDescription="@string/app_name"
            android:padding="4dip"
            android:scaleType="fitXY"
            android:src="@drawable/bg_user_default"/>

        <ImageView
            android:id="@+id/item_head_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_head"
            android:layout_alignRight="@id/item_head"
            android:padding="4dip"
            android:src="@drawable/ic_icon_v_big"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>