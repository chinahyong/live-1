<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:background="@drawable/a_bg_ffffff_e5e5e5_selector"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sen_gifts_num"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="10dip"
        android:text="1314"
        android:textColor="@color/a_text_color_333333"
        android:textSize="@dimen/a_text_size_46" />

    <TextView
        android:id="@+id/sen_gifts_num_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="一生一世"
        android:textColor="@color/a_text_color_666666"
        android:textSize="@dimen/a_text_size_46" />

</LinearLayout>