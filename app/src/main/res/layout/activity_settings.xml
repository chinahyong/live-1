<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical"
    tools:context="com.bixin.bixin.activities.SettingsActivity">

    <include layout="@layout/a_common_top_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29.66dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/setting_account"
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_42"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a_bg_color_ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/settings_rl_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/setting_account_sale"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:id="@+id/settings_rl_account_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/settings_rl_account_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_toLeftOf="@id/settings_rl_account_arrow"
                android:text="@string/setting_account_sale"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_39"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"/>

        <RelativeLayout
            android:id="@+id/settings_rl_anim_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/my_info_tv_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/anim_setting"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"/>


        <RelativeLayout
            android:id="@+id/settings_rl_advice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/advice"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/settings_rl_get_back_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/get_back_password"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/settings_rl_backlist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/me_setting_black_list"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29.66dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings"
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_42"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a_bg_color_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settings_rl_msg_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:visibility="gone"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/my_info_tv_attentiones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/msg_settings"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:id="@+id/settings_msg_setting_line"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"/>

        <RelativeLayout
            android:id="@+id/settings_rl_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/help"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/settings_rl_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/about"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"/>

        <RelativeLayout
            android:id="@+id/settings_rl_check_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/check_update"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_item_arrow"
                android:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/settings_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_common_item_bg_height"
        android:layout_marginTop="20dip"
        android:background="@drawable/a_main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/logout"
        android:textColor="@color/a_text_color_333333"
        android:textSize="@dimen/a_text_size_42"/>

</LinearLayout>