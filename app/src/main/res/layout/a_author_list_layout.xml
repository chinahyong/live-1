<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/a_common_loadingprogress_layout"
        android:visibility="gone" />

    <com.handmark.pulltorefresh.library.PullToRefreshHeaderGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/author_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:horizontalSpacing="12dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:scrollbarStyle="outsideOverlay"
        android:smoothScrollbar="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrDrawable="@drawable/a_common_progress_circle"
        ptr:ptrHeaderBackground="@color/a_bg_backgroup_color"
        ptr:ptrHeaderTextColor="@color/a_pulltorefresh_head_text"
        ptr:ptrListViewExtrasEnabled="true"
        ptr:ptrMode="both" />

</RelativeLayout>