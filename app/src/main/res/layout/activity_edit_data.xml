<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_color_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/a_common_top_bar"/>

    <RelativeLayout
        android:id="@+id/edit_data_ll_photo"
        android:layout_width="match_parent"
        android:layout_height="66.67dp"
        android:visibility="gone"
        android:layout_marginTop="10dip"
        android:background="@drawable/a_main_item_selector"
        android:descendantFocusability="beforeDescendants"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/edit_data_photo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="@string/system_gallery"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_42"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/edit_data_iv_photo"
            android:layout_toRightOf="@id/edit_data_photo_label"
            android:clickable="false"
            android:focusable="false">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/edit_data_photo_list"
                android:layout_width="wrap_content"
                android:layout_height="42.66dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/edit_data_iv_photo"
            android:layout_width="42.66dp"
            android:layout_height="42.66dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_my_photo_add_selector"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_data_ll_headpic"
        android:layout_width="match_parent"
        android:layout_height="66.67dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/a_main_item_selector"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_user_head"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_42"/>

        <ImageView
            android:id="@+id/edit_data_iv_headpic"
            android:layout_width="42.66dp"
            android:layout_height="42.66dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/bg_user_default"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/a_bg_color_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/edit_user_id"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <TextView
                android:id="@+id/edit_data_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_40"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider_horizontal"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/edit_data_ll_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/edit_user_nick"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <TextView
                android:id="@+id/edit_data_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_40"/>
        </RelativeLayout>

        <View
            android:id="@+id/settings_msg_setting_line"
            style="@style/divider_horizontal_e6e6e6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:id="@+id/edit_data_ll_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/edit_user_sex"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <TextView
                android:id="@+id/edit_data_rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_40"/>
        </RelativeLayout>

        <View
            style="@style/divider_horizontal_e6e6e6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:id="@+id/edit_data_ll_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/edit_user_birthday"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <TextView
                android:id="@+id/edit_data_edt_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/trans"
                android:gravity="center"
                android:text="1990-01-01"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_40"/>
        </RelativeLayout>
        <View
            style="@style/divider_horizontal_e6e6e6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <RelativeLayout
            android:id="@+id/edit_data_ll_constellation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_common_item_bg_height"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/setting_account_constellation"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <TextView
                android:id="@+id/edit_data_edt_constellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/trans"
                android:gravity="center"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_40"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edit_data_ll_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/a_main_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/introduction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:text="@string/edit_user_signature"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_42"/>

        <TextView
            android:id="@+id/edit_data_tv_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/introduction_text"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="8dp"
            android:hint="暂无"
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_40"/>
    </RelativeLayout>

</LinearLayout>