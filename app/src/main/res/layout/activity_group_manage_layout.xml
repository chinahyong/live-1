<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical" >

    <include layout="@layout/a_common_top_bar" />

    <TextView
        android:id="@+id/mannage_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a_bg_color_f0f0f0"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dip"
        android:paddingBottom="8dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="8dip"
        android:text="@string/commutity_manage_expain"
        android:textColor="@color/a_text_color_666666"
        android:textSize="@dimen/a_text_size_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/a_common_loadingprogress_layout"
            android:visibility="gone" />

        <tv.live.bx.ui.PullRefreshListView
            android:id="@+id/author_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000" >
        </tv.live.bx.ui.PullRefreshListView>
    </RelativeLayout>

</LinearLayout>