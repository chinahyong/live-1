<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subject_list_item_selector"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.66dip"
        android:layout_marginTop="6.66dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/item_lv_focus_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_lv_focus_v"
            android:layout_toRightOf="@+id/item_lv_focus_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_lv_focus_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13.33dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="safds"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42" />

            <TextView
                android:id="@+id/item_lv_focus_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:layout_marginTop="6dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="safds"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_30" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_lv_focus_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_down_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/me_tuijian_loaddown"
            android:textColor="@color/a_text_color_ffa200"
            android:textSize="@dimen/a_text_size_42"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

</LinearLayout>