<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="92dip"
        android:layout_height="92dip"
        android:layout_marginRight="12dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/item_headicon"
            android:layout_width="92dip"
            android:layout_height="92dip"
            android:contentDescription="@string/app_name" >
        </ImageView>

        <ImageView
            android:layout_width="92dip"
            android:layout_height="92dip"
            android:background="@drawable/shape_corner_color_99000000" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="神码饭"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_48" >
            </TextView>

            <TextView
                android:id="@+id/item_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="神码饭史蒂夫罗杰斯地方"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_32" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>