<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/live_connect_list_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/live_connect_list_layout"
            android:layout_width="match_parent"
            android:layout_height="273.66dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:clickable="true">
            <TextView
                android:id="@+id/live_connect_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/live_connect_list_title"
                android:textColor="@color/a_font_color_333333"
                android:textSize="@dimen/a_text_size_45"/>
            <TextView
                android:id="@+id/live_connect_list_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/live_connect_list_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/live_connect_list_description"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_36"/>
            <tv.live.bx.ui.EmptyRecyclerView
                android:id="@+id/live_connect_list_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/live_connect_list_description"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="9dp"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/live_connect_invite_empty_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/live_connect_list_description"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dip"
                    android:background="@drawable/icon_empty"/>
                <TextView
                    android:id="@+id/live_connect_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dip"
                    android:gravity="center"
                    android:text="@string/live_connect_request_empty"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_36"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</merge>