<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="233.33dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:background="@drawable/shape_dialog_bg">

            <TextView
                android:id="@+id/private_message_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:text="@string/popwindow_conversation_prop_message1"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_45"/>

            <TextView
                android:id="@+id/private_message_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/private_message_text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="@string/popwindow_conversation_prop_message2"
                android:textColor="#da500e"
                android:textSize="@dimen/a_text_size_42"/>

            <Button
                android:id="@+id/conversation_buy_ticket"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@id/private_message_text2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_buy_conversation_prop_selector"
                android:text="@string/live_conversation_buy_prop"
                android:textColor="@color/a_text_d9d9d9_ffffff_selector"
                android:textSize="@dimen/a_text_size_45"/>

            <TextView
                android:id="@+id/conversation_ticket_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/conversation_buy_ticket"
                android:layout_below="@id/conversation_buy_ticket"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="4dip"
                android:layout_marginTop="8dp"
                android:text="@string/popwindow_conversation_prop_result_num"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_39"/>

            <TextView
                android:id="@+id/btn_person_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/conversation_buy_ticket"
                android:layout_below="@id/conversation_buy_ticket"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="4dip"
                android:layout_marginTop="8dp"
                android:text="@string/popwindow_conversation_look_person_info"
                android:textColor="@color/a_text_color_da500e"
                android:textSize="@dimen/a_text_size_39"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/private_message_layout"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/private_message_user_head_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_bg_circle">

                <ImageView
                    android:id="@+id/private_message_user_head"
                    android:layout_width="74dip"
                    android:layout_height="74dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/private_message_user_head_v"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignRight="@+id/private_message_user_head_layout"
                android:layout_marginTop="58dp"
                android:src="@drawable/ic_icon_v_big"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
