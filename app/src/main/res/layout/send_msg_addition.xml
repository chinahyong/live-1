<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/post_input_addition_layout_heigth"
              android:orientation="horizontal"
              android:paddingLeft="28dp"
              android:paddingTop="12dp">

    <Button
        android:id="@+id/btn_add_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_pictrue_selector"
        android:text="图片"
        android:drawablePadding="4dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/a_text_size_36"
        android:textColor="@color/a_text_color_999999"/>

    <Button
        android:id="@+id/btn_private_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_private_live_selector"
        android:layout_marginLeft="24dp"
        android:text="@string/rongcloud_user_private_text"
        android:drawablePadding="4dp"
        android:textSize="@dimen/a_text_size_36"
        android:gravity="center_horizontal"
        android:textColor="@color/a_text_color_999999"/>
</LinearLayout>
