<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical"
    tools:context="tv.live.bx.activities.AnchorActivity" >

    <include layout="@layout/a_common_top_bar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@android:color/white"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/anchor_step_1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_anchor_step_selector"
                            android:gravity="center"
                            android:text="@string/anchor_step_1"
                            android:textColor="@color/a_bg_top_bar_color" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignTop="@+id/anchor_step_1"
                            android:layout_marginTop="9.5dp"
                            android:layout_toRightOf="@+id/anchor_step_1"
                            android:background="@color/a_bg_top_bar_color" />

                        <TextView
                            android:id="@+id/anchor_step_1_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/anchor_step_status_1"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_36" />

                        <TextView
                            android:id="@+id/anchor_step_1_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_1_status"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/a_text_color_b4b4b4"
                            android:textSize="@dimen/a_text_size_30" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/anchor_step_2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_anchor_step_selector"
                            android:gravity="center"
                            android:text="@string/anchor_step_2"
                            android:textColor="@color/a_bg_top_bar_color" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignTop="@+id/anchor_step_2"
                            android:layout_marginTop="9.5dp"
                            android:layout_toRightOf="@+id/anchor_step_2"
                            android:background="@color/a_bg_top_bar_color" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignTop="@+id/anchor_step_2"
                            android:layout_marginTop="9.5dp"
                            android:layout_toLeftOf="@+id/anchor_step_2"
                            android:background="@color/a_bg_top_bar_color" />

                        <TextView
                            android:id="@+id/anchor_step_2_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/anchor_step_status_2"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_36" />

                        <TextView
                            android:id="@+id/anchor_step_2_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_2_status"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/a_text_color_b4b4b4"
                            android:textSize="@dimen/a_text_size_30" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/anchor_step_3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_anchor_step_selector"
                            android:gravity="center"
                            android:text="@string/anchor_step_3"
                            android:textColor="@color/a_bg_top_bar_color" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignTop="@+id/anchor_step_3"
                            android:layout_marginTop="9.5dp"
                            android:layout_toLeftOf="@+id/anchor_step_3"
                            android:background="@color/a_bg_top_bar_color" />

                        <TextView
                            android:id="@+id/anchor_step_3_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/anchor_step_status_3"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_36" />

                        <TextView
                            android:id="@+id/anchor_step_3_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/anchor_step_3_status"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/a_text_color_b4b4b4"
                            android:textSize="@dimen/a_text_size_30" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <LinearLayout
                        android:id="@+id/anchor_ll_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/anchor_iv_phone"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_icon_phone_nor" />

                            <TextView
                                android:id="@+id/anchor_tv_mobile_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_marginRight="15dp"
                                android:layout_toRightOf="@+id/anchor_iv_phone"
                                android:gravity="center"
                                android:text="@string/anchor_mobile_addr"
                                android:textColor="@color/a_text_333333_b4b4b4_selector"
                                android:textSize="@dimen/a_text_size_42" />

                            <EditText
                                android:id="@+id/anchor_et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/anchor_tv_mobile_addr"
                                android:background="@null"
                                android:ems="7"
                                android:gravity="center_vertical"
                                android:hint="@string/anchor_phone_msg"
                                android:inputType="phone"
                                android:singleLine="true"
                                android:textColor="@color/a_text_333333_b4b4b4_selector"
                                android:textColorHint="@color/a_text_color_b4b4b4"
                                android:textSize="@dimen/a_text_size_42" />

                            <ImageView
                                android:id="@+id/anchor_iv_phone_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:src="@drawable/a_clear_text_status_selector"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/a_bg_color_e6e6e6" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/anchor_iv_qq"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_icon_qq_nor" />

                            <EditText
                                android:id="@+id/anchor_et_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/anchor_iv_qq"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="@string/anchor_qq_msg"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/a_text_333333_b4b4b4_selector"
                                android:textColorHint="@color/a_text_color_b4b4b4"
                                android:textSize="@dimen/a_text_size_42" />

                            <ImageView
                                android:id="@+id/anchor_iv_qq_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:src="@drawable/a_clear_text_status_selector"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/a_bg_color_e6e6e6" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/anchor_iv_video"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_icon_camera_nor" />

                            <RelativeLayout
                                android:id="@+id/anchor_rl_video"
                                android:layout_width="90dp"
                                android:layout_height="44dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/anchor_iv_video"
                                android:background="@drawable/bg_video_selector" >

                                <TextView
                                    android:id="@+id/anchor_tv_video"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/anchor_recoder_video"
                                    android:textColor="@color/a_text_color_b4b4b4"
                                    android:textSize="@dimen/a_text_size_48" />

                                <ImageView
                                    android:id="@+id/anchor_iv_video_click"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/a_anchor_video_play_status_selector"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <ImageView
                                android:id="@+id/anchor_iv_note"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_icon_anchor_note_nor" />

                            <EditText
                                android:id="@+id/anchor_et_note"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/anchor_iv_note"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="@string/anchor_note_msg"
                                android:singleLine="true"
                                android:textColor="@color/a_text_333333_b4b4b4_selector"
                                android:textColorHint="@color/a_text_color_b4b4b4"
                                android:textSize="@dimen/a_text_size_42" />

                            <ImageView
                                android:id="@+id/anchor_iv_note_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:src="@drawable/a_clear_text_status_selector"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/a_bg_color_e6e6e6" />

                        <TextView
                            android:id="@+id/anchor_tv_submit"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/bg_border_submit_selector"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textColor="@color/a_text_333333_b4b4b4_selector"
                            android:textSize="@dimen/a_text_size_45" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/anchor_ll_content_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_icon_anchor_result" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:text="@string/anchor_result_one"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:text="@string/anchor_result_two"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:text="@string/anchor_result_three"
                            android:textColor="@color/a_text_color_666666"
                            android:textSize="@dimen/a_text_size_42" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/anchor_message_title"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_36" />

                <TextView
                    android:id="@+id/anchor_ll_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/anchor_message_no"
                    android:textColor="@color/a_text_color_999999"
                    android:textSize="@dimen/a_text_size_36" />

                <TextView
                    android:id="@+id/anchor_message_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/anchor_message_success"
                    android:textColor="@color/a_text_color_999999"
                    android:textSize="@dimen/a_text_size_36"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>