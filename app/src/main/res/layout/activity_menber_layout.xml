<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_color_f0f0f0"
    android:orientation="vertical" >

    <include layout="@layout/a_common_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_top_title_bg_height"
        android:background="@color/a_bg_color_e5e5e5"
        android:paddingLeft="12dip"
        android:paddingRight="12dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/search_tv"
            android:layout_toRightOf="@id/cancel"
            android:background="@drawable/icon_search_bg_1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serach_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="5dip"
                android:src="@drawable/icon_search_sm" />

            <EditText
                android:id="@+id/search_content"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/commutity_fan_menber_search_hit"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingRight="12dip"
                android:singleLine="true"
                android:textColor="@color/a_text_color_333333"
                android:textColorHint="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_36" />

            <ImageView
                android:id="@+id/search_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dip"
                android:src="@drawable/icon_del"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/menber_num"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/a_bg_color_f8f8f8"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:text="@string/commutity_fan_menber_num"
        android:textColor="@color/a_text_color_333333"
        android:textColorHint="@color/a_text_color_999999"
        android:textSize="@dimen/a_text_size_32" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/a_common_loadingprogress_layout"
            android:visibility="gone" />

        <tv.live.bx.ui.PullRefreshListView
            android:id="@+id/author_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000" >
        </tv.live.bx.ui.PullRefreshListView>
    </RelativeLayout>

</LinearLayout>