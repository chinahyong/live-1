<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">


    <RelativeLayout
        android:id="@+id/my_info_user_img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp">

        <ImageView
            android:id="@+id/my_info_img_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_user_default_head"
            android:contentDescription="@string/app_name"
            android:padding="1dip"
            android:scaleType="fitXY"
            android:src="@drawable/bg_user_default"/>

        <ImageView
            android:id="@+id/my_info_img_user_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_info_img_user"
            android:layout_alignRight="@+id/my_info_img_user"
            android:src="@drawable/ic_icon_v_big"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/my_info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_info_user_img_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_info_user_id_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_info_tv_user_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="@color/a_bg_color_99000000"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="@string/me_anchor_user_id"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_30"/>

            <TextView
                android:id="@+id/my_info_tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/a_bg_color_99000000"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_30"/>
        </LinearLayout>

        <TextView
            android:id="@+id/my_info_tv_medals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5.33dp"
            android:gravity="center"
            android:orientation="horizontal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/my_info_tv_medals_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_info_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/person_info_album_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/person_info_album_layout"
        android:layout_below="@id/my_info_tv_medals_2"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_album_bg_shape"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/person_info_album_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_info_tv_medals_2"
        android:paddingBottom="10dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/person_info_album_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:persistentDrawingCache="animation"
            android:visibility="gone"/>
        <com.viewpagerindicator.IconPageIndicator
            android:id="@+id/person_info_album_indicator"
            android:layout_width="wrap_content"
            android:layout_height="7dp"
            android:layout_below="@id/person_info_album_pager"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:LLmarginLeft="5dp"
            app:LLmarginRight="5dp"/>
    </RelativeLayout>
</RelativeLayout>