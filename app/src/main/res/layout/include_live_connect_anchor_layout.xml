<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_connect_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <RelativeLayout
        android:id="@+id/live_connect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clickable="true">
        <TextView
            android:id="@+id/live_connect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/live_connect_title"
            android:textColor="@color/a_font_color_333333"
            android:textSize="@dimen/a_text_size_51"/>
        <ImageView
            android:id="@+id/live_connect_user_headpic"
            android:layout_width="47.33dp"
            android:layout_height="47.33dp"
            android:layout_below="@id/live_connect_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>
        <RelativeLayout
            android:id="@+id/live_connect_user_name_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/live_connect_user_headpic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="10.33dp">
            <TextView
                android:id="@+id/live_connect_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_36"/>
            <ImageView
                android:id="@+id/live_connect_user_level"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/live_connect_user_name"/>
        </RelativeLayout>
        <!-- 暂不支持音频连线，暂时隐藏不做显示处理 -->
        <RadioGroup
            android:id="@+id/live_connect_rg_send_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/live_connect_user_name_level"
            android:orientation="horizontal"
            android:visibility="gone">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <RadioButton
                android:id="@+id/live_connect_send_audio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/btn_live_send_audio_selector"
                android:checked="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <RadioButton
                android:id="@+id/live_connect_send_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/btn_live_send_video_selector"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </RadioGroup>
        <!-- 最底部3中状态 -->
        <!-- 取消连线 -->
        <Button
            android:id="@+id/live_connect_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/live_connect_rg_send_type"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="22.66dp"
            android:layout_marginRight="22.66dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/bg_live_connect_cancel_selector"
            android:gravity="center"
            android:text="@string/live_connect_cancel"
            android:textColor="@color/a_text_da500e_ffffff_selector"
            android:textSize="@dimen/a_text_size_51"
            android:visibility="gone"/>
        <!-- 建立连线 -->
        <Button
            android:id="@+id/live_connect_btn_connect"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/live_connect_rg_send_type"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="22.66dp"
            android:layout_marginRight="22.66dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/bg_live_connect_selector"
            android:gravity="center"
            android:text="@string/live_connect_connect"
            android:textColor="@color/white"
            android:textSize="@dimen/a_text_size_51"/>
        <!-- 接收连线 -->
        <LinearLayout
            android:id="@+id/live_connect_receive_layout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/live_connect_rg_send_type"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/live_connect_receive_ignore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_live_receive_ignore_bg_selector"
                android:gravity="center"
                android:text="@string/live_ignore_connect"
                android:textColor="@color/a_text_666666_ffffff_selector"
                android:textSize="@dimen/a_text_size_51"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
            <Button
                android:id="@+id/live_connect_receive_audio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_live_receive_audio_selector"
                android:visibility="gone"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/live_connect_receive_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_live_receive_video_bg_selector"
                android:gravity="center"
                android:text="@string/live_accept_connect"
                android:textColor="@color/a_text_da500e_ffffff_selector"
                android:textSize="@dimen/a_text_size_51"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>