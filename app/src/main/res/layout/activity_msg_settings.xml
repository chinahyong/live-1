<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_color_f0f0f0"
    android:orientation="vertical" >

    <include layout="@layout/a_common_top_bar" />

    <RelativeLayout
        android:id="@+id/edit_data_ll_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_common_item_bg_height"
        android:layout_marginTop="10dip"
        android:background="@drawable/a_main_item_selector"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/playing_notice"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_42" />

        <ToggleButton
            android:id="@+id/msg_setting_sw_playing_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_switch"
            android:button="@color/trans"
            android:checked="true"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

</LinearLayout>