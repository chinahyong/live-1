<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_fm_viewers_audience_iv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/bg_user_default" >
        </ImageView>

        <TextView
            android:id="@+id/item_fm_viewers_audience_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/item_fm_viewers_audience_tv_vip"
            android:layout_toRightOf="@+id/item_fm_viewers_audience_iv_photo"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_light_gray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6.66dp"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_fm_viewers_audience_tv_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</LinearLayout>