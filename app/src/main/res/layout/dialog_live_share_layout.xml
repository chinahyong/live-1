<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/trans"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_notify_friend"
        android:textColor="@color/a_text_color_ffa200"
        android:textSize="@dimen/a_text_size_40"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/fragment_share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_weixin_selector"
            android:gravity="center_horizontal"></ImageView>

        <ImageView
            android:id="@+id/fragment_share_pengyouyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:background="@drawable/btn_friend_selector"
            android:gravity="center_horizontal"></ImageView>

        <ImageView
            android:id="@+id/fragment_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:visibility="gone"
            android:background="@drawable/btn_weibo_selector"
            android:gravity="center_horizontal"></ImageView>

        <ImageView
            android:id="@+id/fragment_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:visibility="gone"
            android:background="@drawable/btn_qq_selector"
            android:gravity="center_horizontal"></ImageView>

        <ImageView
            android:id="@+id/fragment_share_qqzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:visibility="gone"
            android:background="@drawable/btn_kongjian_selector"></ImageView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/fragment_share_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/fragment_share_rb_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_weixin_selector"
            android:button="@null"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/fragment_share_rb_pengyouyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:background="@drawable/btn_friend_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/fragment_share_rb_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:background="@drawable/btn_weibo_selector"
            android:button="@null"
            android:visibility="gone"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/fragment_share_rb_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:visibility="gone"
            android:background="@drawable/btn_qq_selector"
            android:button="@null"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/fragment_share_rb_qqzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.66dp"
            android:visibility="gone"
            android:background="@drawable/btn_kongjian_selector"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_live"
        android:layout_width="293.33dp"
        android:layout_height="@dimen/a_button_height_bg_144"
        android:layout_marginTop="21.33dp"
        android:background="@drawable/btn_login_bg_selector"
        android:enabled="false"
        android:text="@string/live_start"
        android:textColor="@color/a_text_ffffff_959595_selector"
        android:textSize="@dimen/a_text_size_52"/>

</LinearLayout>