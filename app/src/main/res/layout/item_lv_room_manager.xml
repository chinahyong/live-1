<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/subject_list_item_selector"
              android:orientation="vertical"
              android:paddingLeft="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:layout_marginTop="12dip"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/item_lv_manager_photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name">
        </ImageView>

        <TextView
            android:id="@+id/item_lv_manager_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_lv_manager_photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="92dp"
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_42"/>

        <ImageView
            android:id="@+id/item_lv_manager_level"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/item_lv_manager_nickname"/>

        <ImageView
            android:id="@+id/item_lv_manager_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:clickable="true"
            android:src="@drawable/btn_cancel_manager_selector"/>

    </RelativeLayout>

    <View style="@style/divider_horizontal_obvious"/>

</LinearLayout>