<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ry_bar_layout"
                style="@style/top_bar_layout">

    <RelativeLayout
        android:id="@+id/ry_bar_left"
        android:layout_width="@dimen/layout_top_title_bg_height"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/a_common_btn_back_selector"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/layout_top_title_bg_height"
        android:layout_marginRight="@dimen/layout_top_title_bg_height"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text=""
        android:textColor="@color/a_text_color_333333"
        android:textSize="@dimen/a_text_size_45"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/ry_bar_right"
        android:layout_width="@dimen/layout_top_title_bg_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_post_right_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ry_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="@color/a_text_ffffff_e6ded7_selector"
            android:textSize="@dimen/a_text_size_45"/>
    </RelativeLayout>
</RelativeLayout>