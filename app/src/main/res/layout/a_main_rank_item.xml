<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <FrameLayout
        android:id="@+id/item_rank_layout"
        android:layout_width="wrap_content"
        android:layout_height="58dp">
        <ImageView
            android:id="@+id/item_rank_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_rank_3"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/item_rank_no_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_39"
            android:visibility="gone"/>
    </FrameLayout>


    <ImageView
        android:id="@+id/item_fm_rank_field_photo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
        android:layout_toRightOf="@id/item_rank_layout"
        android:background="@drawable/trans_bg"
        android:contentDescription="@string/app_name"
        android:padding="2dip"
        android:src="@drawable/bg_user_default"/>

    <ImageView
        android:id="@+id/item_fm_rank_field_photo_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_fm_rank_field_photo"
        android:layout_alignRight="@id/item_fm_rank_field_photo"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_icon_v"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_fm_rank_field_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/item_fm_rank_field_photo"
        android:textColor="@color/a_text_color_333333"
        android:textSize="@dimen/a_text_size_42"/>


    <ImageView
        android:id="@+id/item_user_level"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/userlevel_0"
        android:visibility="visible"/>

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>