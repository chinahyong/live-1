<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip"
        android:background="@drawable/a_bg_corner_ffffff_f0f0f0_selector"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_fanquan_logo"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" >
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_live_logo_bg"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_fanquan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="神码饭圈及律师费"
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_36" >
        </TextView>

        <TextView
            android:id="@+id/item_fanquan_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="4dip"
            android:text="1024"
            android:textColor="@color/a_text_color_333333"
            android:textSize="@dimen/a_text_size_30"
            android:textStyle="bold"
            android:visibility="visible" >
        </TextView>

        <ImageView
            android:id="@+id/item_fanquan_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:src="@drawable/btn_add_nor"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>