<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_color_f0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/category_menu"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/a_bg_color_f3f3f3"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/category_switch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/commutity_catelory_switch"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:src="@drawable/icon_cut_nor" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/a_bg_color_f0f0f0" />

        <ImageView
            android:id="@+id/publicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28.66dp"
            android:layout_marginRight="16.66dp"
            android:src="@drawable/btn_publish_bg_selector" />

        <LinearLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/a_bg_color_ffffff"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/a_bg_color_ffffff"
                android:gravity="center"
                android:listSelector="@null"
                android:numColumns="4"
                android:smoothScrollbar="true"
                android:soundEffectsEnabled="true"
                android:stretchMode="columnWidth" >
            </GridView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>