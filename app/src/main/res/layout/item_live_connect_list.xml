<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="102dip"
                android:background="@drawable/bg_live_connect_invate_selector">
    <ImageView
        android:id="@+id/live_connect_list_headpic"
        android:layout_width="54dip"
        android:layout_height="54dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dip"/>
    <ImageView
        android:id="@+id/live_connect_type"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignBottom="@+id/live_connect_list_headpic"
        android:layout_alignRight="@+id/live_connect_list_headpic"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_connect_list_headpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/live_connect_list_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_36"/>
        <ImageView
            android:id="@+id/live_connect_list_level"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/live_connect_list_name"/>

    </LinearLayout>
    <Button
        android:id="@+id/live_connect_list_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_connect_list_headpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dip"
        android:background="@drawable/btn_dir_lianxian_selector"
        android:gravity="center"
        android:text="@string/live_connect"
        android:textColor="@color/a_text_color_ffffff"
        android:textSize="@dimen/a_text_size_36"
        android:visibility="gone"/>
</RelativeLayout>