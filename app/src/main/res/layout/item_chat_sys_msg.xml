<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_chat_left_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:text="13:00"
        android:textColor="@color/text_light_gray"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_paly_left_pading"
        android:layout_marginRight="@dimen/layout_paly_right_pading"
        android:layout_marginTop="16.66dp" >

        <ImageView
            android:id="@+id/item_chat_left_iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_chat_other_icon" />

        <ImageView
            android:id="@+id/item_chat_sys_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/item_chat_left_iv_photo"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_chat_sys_icon" />

        <TextView
            android:id="@+id/item_chat_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/item_chat_sys_icon"
            android:gravity="center_vertical"
            android:text="23343"
            android:textSize="13sp"
            android:textColor="@color/a_text_color_787878" />
    </RelativeLayout>

</RelativeLayout>