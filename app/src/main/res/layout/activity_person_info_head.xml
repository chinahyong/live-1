<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical"
    android:padding="12dip" >

    <RelativeLayout
        android:id="@+id/my_info_ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/my_info_img_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_user_default_head"
            android:padding="2.66dip" >

            <ImageView
                android:id="@+id/my_info_img_user"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_user_default"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/my_info_level_layout"
                android:layout_width="16.33dip"
                android:layout_height="16.33dip"
                android:layout_alignBottom="@id/my_info_img_user"
                android:layout_alignRight="@id/my_info_img_user"
                android:background="@drawable/bg_user_level"
                android:padding="2.66dip" >

                <ImageView
                    android:id="@+id/my_info_level"
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21.33dp"
            android:layout_toRightOf="@id/my_info_img_user_layout"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/person_dynamic"
                        android:textColor="@color/a_text_color_666666"
                        android:textSize="@dimen/a_text_size_30" />

                    <TextView
                        android:id="@+id/item_dynamic_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.33dip"
                        android:gravity="center_vertical"
                        android:text="1008"
                        android:textColor="@color/a_text_color_333333"
                        android:textSize="@dimen/a_text_size_30"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_fans_layout"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/a_bg_f6f1ea_e6ded7_selector"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/person_fans"
                        android:textColor="@color/a_text_color_666666"
                        android:textSize="@dimen/a_text_size_30" />

                    <TextView
                        android:id="@+id/item_fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.33dip"
                        android:gravity="center_vertical"
                        android:text="1008"
                        android:textColor="@color/a_text_color_333333"
                        android:textSize="@dimen/a_text_size_30"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_focus_layout"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/a_bg_f6f1ea_e6ded7_selector"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/person_focus"
                        android:textColor="@color/a_text_color_666666"
                        android:textSize="@dimen/a_text_size_30" />

                    <TextView
                        android:id="@+id/item_focus_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.33dip"
                        android:gravity="center_vertical"
                        android:text="1008"
                        android:textColor="@color/a_text_color_333333"
                        android:textSize="@dimen/a_text_size_30"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/item_button"
                android:layout_width="match_parent"
                android:layout_height="26.66dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/btn_person_selector"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_30" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_anchor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip" >

        <RelativeLayout
            android:id="@+id/item_me_verify_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_user_photo_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3.33dp"
                android:src="@drawable/ic_icon_v"/>

            <TextView
                android:id="@+id/item_user_verify_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_user_photo_v"
                android:textColor="@color/a_text_color_eaaf22"
                android:textSize="@dimen/a_text_size_32" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_live_status_layout"
            android:layout_width="68.66dip"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TextView
                android:id="@+id/item_live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_live_status_1"
                android:gravity="center"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:text="@string/person_anchor_live"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_live_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_live_status_layout"
            android:layout_alignTop="@+id/item_live_status_layout"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/item_live_status_layout"
            android:visibility="gone" >

            <TextView
                android:id="@+id/item_live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/person_anchor_live"
                android:textColor="@color/a_text_color_da500e"
                android:textSize="@dimen/a_text_size_30" />

            <ImageView
                android:id="@+id/item_live_time_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/item_live_time"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:src="@drawable/btn_person_close_selector"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_live_status_layout"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/item_live_status_layout"
            android:layout_centerHorizontal="true"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:text="@string/person_go_room"
            android:textColor="@color/a_text_da500e_60_selector"
            android:textSize="@dimen/a_text_size_30"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/person_dynamic"
        android:textColor="@color/a_text_color_aaaaaa"
        android:textSize="@dimen/a_text_size_40"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dip"
        android:text="@string/person_no_dynamic_tip"
        android:textColor="@color/a_text_color_a0a0a0"
        android:textSize="@dimen/a_text_size_40"
        android:visibility="gone" />

</LinearLayout>