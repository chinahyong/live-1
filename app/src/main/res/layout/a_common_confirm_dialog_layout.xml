<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/parentPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_confrim_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41.66dp"
            android:gravity="center"
            android:text="网络提示"
            android:textColor="@color/confirm_dialog_text"
            android:textSize="@dimen/layout_title_text_size_middle" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33.66dp"
            android:gravity="center"
            android:text="网络已切换到2G/3G/4G，是否继续播放"
            android:textColor="@color/confirm_dialog_text"
            android:textSize="@dimen/layout_title_text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27.33dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/negative"
                style="@style/btn_confrim"
                android:layout_marginRight="23.33dp"
                android:text="@string/cancel"
                android:visibility="visible" />

            <Button
                android:id="@+id/positive"
                style="@style/btn_confrim"
                android:text="确认"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>