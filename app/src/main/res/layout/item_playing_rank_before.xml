<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_bg_ffffff_f0f0f0_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/item_playing_ranking_iv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_icon_ranking_1rt"/>

        <RelativeLayout
            android:id="@+id/item_playing_ranking_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_bg_lv1rt">

            <ImageView
                android:id="@+id/item_playing_ranking_iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_user_default"/>

            <ImageView
                android:id="@+id/item_playing_ranking_iv_photo_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_playing_ranking_iv_photo"
                android:layout_alignRight="@id/item_playing_ranking_iv_photo"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_v"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_playing_ranking_iv_hearder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="37.66dp"
            android:src="@drawable/ic_icon_ranking_header_1rt"/>

        <LinearLayout
            android:id="@+id/item_playing_ranking_nick_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_playing_ranking_photo_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/item_playing_ranking_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_42"/>

            <ImageView
                android:id="@+id/item_playing_ranking_user_level"
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_playing_ranking_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_playing_ranking_nick_name_layout"
            android:layout_centerHorizontal="true"
            android:text="@string/rank_totalP_num"
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_36"/>
    </RelativeLayout>

</RelativeLayout>