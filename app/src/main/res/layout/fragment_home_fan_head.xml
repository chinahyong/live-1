<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/a_bg_backgroup_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="12dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/add_fanquan"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a_bg_corner_ffffff_e6ded7_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/commutity_add_fan"
                android:textColor="@color/a_text_color_aaaaaa"
                android:textSize="@dimen/a_text_size_36" />
        </RelativeLayout>

        <View
            android:layout_width="12dip"
            android:layout_height="21.33dip"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:id="@+id/create_fanquan"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a_bg_corner_ffffff_e6ded7_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/commutity_create_fan"
                android:textColor="@color/a_text_color_aaaaaa"
                android:textSize="@dimen/a_text_size_36" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tariler_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_me_group"
                android:textColor="@color/a_text_color_aaaaaa"
                android:textSize="@dimen/a_text_size_40"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/head_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:drawablePadding="8dip"
                android:drawableRight="@drawable/icon_more"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:text="@string/home_all"
                android:textColor="@color/a_text_da500e_60_selector"
                android:textSize="@dimen/a_text_size_30"
                android:textStyle="bold" />
        </RelativeLayout>

        <tv.live.bx.ui.HorizontalListView
            android:id="@+id/tariler_listview"
            android:layout_width="match_parent"
            android:layout_height="116dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="12dip"
            android:fadingEdge="none"
            android:listSelector="#00000000" >
        </tv.live.bx.ui.HorizontalListView>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:paddingLeft="12dip"
        android:text="@string/home_new_dynamic"
        android:textColor="@color/a_text_color_aaaaaa"
        android:textSize="@dimen/a_text_size_40"
        android:textStyle="bold" />

</LinearLayout>