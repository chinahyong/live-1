<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        layout="@layout/a_common_top_bar" />
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/a_common_loadingprogress_layout"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginTop="48dp"
        android:background="@color/a_bg_color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="24dp">
        <ImageView
            android:id="@+id/icon_tixing"
            android:src="@drawable/icon_tixing"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/select_message_text1"
            android:textColor="#999999"
            android:text="@string/select_reciever_left_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/icon_tixing"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_marginTop="72dp"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include
            layout="@layout/a_common_loadingprogress_layout"
            android:visibility="gone" />
        <tv.live.bx.ui.PullRefreshListView
            android:drawSelectorOnTop="true"
            android:id="@+id/select_receive_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@drawable/a_bg_tran_18000000_selector" >
        </tv.live.bx.ui.PullRefreshListView>
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/select_receive_sended"
            android:textSize="15sp"
            android:textColor="@color/a_text_color_999999"
            android:text="@string/select_reciever_no_sended"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/select_receive_neverSend"
            android:textSize="15sp"
            android:textColor="@color/a_text_color_999999"
            android:text="@string/select_reciever_no_never_send"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/select_message_no_reciever"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/a_text_color_999999"
            android:textSize="16sp"
            android:text="@string/select_reciever_no_reciever1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/a_text_color_999999"
            android:textSize="16sp"
            android:text="@string/select_reciever_no_reciever2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/select_receive_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:gravity="center"
            android:background="@color/a_bg_color_cbcbcb"
            android:orientation="horizontal"
            android:id="@+id/select_receive_next_step"
            android:layout_alignParentRight="true"
            android:layout_width="126dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/a_text_color_ffffff"
                android:text="@string/select_reciever_next_step"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_receive_next_step_text"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/select_receive_all"
            android:layout_toLeftOf="@id/select_receive_next_step"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/select_receive_all_img1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_weixuan_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="invisible"
                android:id="@+id/select_receive_all_img2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_weixuan_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/select_receive_all_img1"
                android:layout_centerVertical="true"
                android:textColor="@color/a_bg_color_333333"
                android:text="@string/select_reciever_choose_all"
                android:layout_marginLeft="12sp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:background="@color/a_bg_color_6e6e6e"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>


    </RelativeLayout>
</RelativeLayout>