<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_redpacket">
    <ImageView
        android:id="@+id/dialog_red_packet_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_red_packet_close"/>

    <ImageView
        android:id="@+id/dialog_red_packet_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_red_packet_help"/>

    <TextView
        android:id="@+id/dialog_red_packet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/live_red_packet_title"
        android:textColor="@color/a_text_color_fbe089"
        android:textSize="@dimen/a_text_size_57"/>

    <RelativeLayout
        android:id="@+id/dialog_red_packet_mount_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_red_packet_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp">
        <TextView
            android:id="@+id/dialog_red_packet_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.80"
            android:textColor="@color/a_text_color_feeba7"
            android:textSize="@dimen/a_text_size_158"/>
        <TextView
            android:id="@+id/dialog_red_packet_mount_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/dialog_red_packet_mount"
            android:layout_toRightOf="@id/dialog_red_packet_mount"
            android:text="@string/live_red_packet_money_unit"
            android:textColor="@color/a_text_color_fbe089"
            android:textSize="@dimen/a_text_size_48"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_red_packet_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_red_packet_mount_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/live_red_packet_subtitle"
        android:textColor="@color/a_text_color_fbe089"
        android:textSize="@dimen/a_text_size_38"/>

    <RelativeLayout
        android:id="@+id/dialog_red_packet_get_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_red_packet_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="95dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_get_red_packet">
            <TextView
                android:id="@+id/dialog_red_packet_get_mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18.66dip"
                android:layout_marginTop="15dip"
                android:text="@string/live_red_packet_get_mount"
                android:textColor="@color/a_text_color_feeba7"
                android:textSize="@dimen/a_text_size_78"/>
            <TextView
                android:id="@+id/dialog_red_packet_get_mount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/dialog_red_packet_get_mount"
                android:layout_toRightOf="@id/dialog_red_packet_get_mount"
                android:text="@string/live_red_packet_money_unit"
                android:textColor="@color/a_text_color_fbe089"
                android:textSize="@dimen/a_text_size_36"/>
            <TextView
                android:id="@+id/dialog_red_packet_get_mount_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dialog_red_packet_get_mount"
                android:layout_below="@id/dialog_red_packet_get_mount"
                android:layout_marginBottom="13dp"
                android:text="@string/live_red_packet_get_mount_msg"
                android:textColor="@color/a_text_color_fbe089"
                android:textSize="@dimen/a_text_size_36"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_red_packet_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_red_packet_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="87dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/dialog_red_packet_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/live_red_packet_empty_msg"
            android:textColor="@color/a_text_color_fbe089"
            android:textSize="@dimen/a_text_size_48"/>
        <CheckBox
            android:id="@+id/dialog_red_packet_empty_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_red_packet_empty_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7.33dp"
            android:button="@drawable/bg_red_packet_check_selector"
            android:checked="true"
            android:text="@string/live_red_packet_empty_hide"
            android:textColor="@color/a_text_color_fbe089"
            android:textSize="@dimen/a_text_size_32"/>
        <TextView
            android:id="@+id/dialog_red_packet_empty_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_red_packet_empty_cb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="@string/live_red_packet_empty_invite"
            android:textColor="@color/a_text_color_fbe089"
            android:textSize="@dimen/a_text_size_38"/>
    </RelativeLayout>
</RelativeLayout>