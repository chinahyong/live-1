<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_edit_album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_edit_album_status"
        android:layout_width="54dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/item_edit_album_photo"
        android:layout_alignRight="@id/item_edit_album_photo"
        android:background="@drawable/a_bg_album"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_text_size_36"
        android:visibility="gone"/>
</RelativeLayout>
