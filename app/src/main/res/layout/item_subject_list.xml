<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/a_bg_color_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subject_list_item_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6.66dip" >

            <ImageView
                android:id="@+id/item_photo"
                android:layout_width="33.33dp"
                android:layout_height="33.33dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_user_default"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.66dip"
                android:layout_toRightOf="@id/item_photo" >

                <TextView
                    android:id="@+id/item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股水电"
                    android:textColor="@color/a_text_color_666666"
                    android:textSize="@dimen/a_text_size_30" />

                <ImageView
                    android:id="@+id/item_userlevel"
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/item_nickname"
                    android:src="@drawable/userlevel_0" />

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_nickname"
                    android:layout_marginTop="3dip"
                    android:text="刚刚"
                    android:textColor="@color/a_text_color_b0b0b0"
                    android:textSize="@dimen/a_text_size_30" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_moudle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/a_text_color_ffa200"
                android:textSize="@dimen/a_text_size_30"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_fan_post_more_selector"
                android:contentDescription="@string/app_name"
                android:padding="3dip"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            style="@style/divider_horizontal"
            android:layout_below="@id/item_top_layout"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6.66dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginTop="8dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/item_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/icon_fan_top"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/item_recomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/icon_fan_recoment"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="水电费上升到公司广东省电力公司的归属感水电费上升到公司广东省电力公司的归属感水电费上升到公司广东省电力公司的归属感"
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_40" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="4dip"
                android:ellipsize="end"
                android:lineSpacingExtra="3dip"
                android:maxLines="4"
                android:text="水电费啥地方了就阿斯顿发了发大水了打飞机水电费收代理费说当发生打发斯蒂芬阿斯顿浪费阿斯顿发了阿斯顿浪费阿斯顿浪费阿斯顿浪费阿斯顿浪费静安寺打发斯蒂芬啊沙发了打死飞拉萨的地方啦放大拉菲打了饭安定了对方阿德勒发生打了饭艾斯黛拉发送到发"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_36" />

            <LinearLayout
                android:id="@+id/item_picture_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginTop="6.66dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26.66dp" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/item_replay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/btn_comment_selector"
                        android:drawablePadding="6.66dp"
                        android:gravity="center_vertical"
                        android:text="1218"
                        android:textColor="@color/a_text_color_ababab"
                        android:textSize="@dimen/a_text_size_30" />
                </RelativeLayout>

                <View
                    style="@style/divider_vertical"
                    android:layout_height="12dip"
                    android:layout_gravity="center_vertical" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/item_view_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/eye"
                        android:drawablePadding="6.66dp"
                        android:gravity="center_vertical"
                        android:text="1218"
                        android:textColor="@color/a_text_color_ababab"
                        android:textSize="@dimen/a_text_size_30" />
                </RelativeLayout>

                <View
                    style="@style/divider_vertical"
                    android:layout_height="12dip"
                    android:layout_gravity="center_vertical" />

                <RelativeLayout
                    android:id="@+id/item_support_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/item_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_parise_btn_selector"
                        android:contentDescription="@string/app_name"
                        android:focusable="false"
                        android:padding="3dip" />

                    <TextView
                        android:id="@+id/item_support_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@id/item_support"
                        android:text="1218"
                        android:textColor="@color/a_text_color_ababab"
                        android:textSize="@dimen/a_text_size_30" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/a_bg_color_f0f0f0" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>