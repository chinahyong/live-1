<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.66dp"
        android:background="@drawable/bg_fan_detail_pop"
        android:orientation="vertical"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="6dip" >

        <RelativeLayout
            android:id="@+id/item1_layout"
            android:layout_width="match_parent"
            android:layout_height="39.33dp"
            android:background="@drawable/a_bg_ffffff_dbdbdb_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dip" >

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fan_menber_manage_logo" />

            <TextView
                android:id="@+id/item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/icon1"
                android:text="@string/commutity_log_manage"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_42" />
        </RelativeLayout>

        <RelativeLayout style="@style/divider_horizontal" />

        <RelativeLayout
            android:id="@+id/item2_layout"
            android:layout_width="match_parent"
            android:layout_height="39.33dp"
            android:background="@drawable/subject_list_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="20dip" >

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fan_menber_help_logo" />

            <TextView
                android:id="@+id/item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/icon2"
                android:text="@string/commutity_fan_menber_help"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_42" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>