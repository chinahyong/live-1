<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/trans">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/shape_corner_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip">

            <ImageView
                android:id="@+id/item_photo"
                android:layout_width="33.33dp"
                android:layout_height="33.33dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_user_default"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/item_photo_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_photo"
                android:layout_alignRight="@+id/item_photo"
                android:src="@drawable/ic_icon_v"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/item_photo">

                <TextView
                    android:id="@+id/item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/a_text_color_333333"
                    android:textSize="@dimen/a_text_size_36"/>

                <ImageView
                    android:id="@+id/item_userlevel"
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/item_nickname"
                    android:src="@drawable/userlevel_0"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_nickname"
                    android:layout_marginTop="3dip"
                    android:text="刚刚"
                    android:textColor="@color/a_text_color_b4b4b4"
                    android:textSize="@dimen/a_text_size_24"/>

                <TextView
                    android:id="@+id/item_moudle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_circle_stroke_da500e"
                    android:gravity="center"
                    android:paddingLeft="5.33dip"
                    android:paddingRight="5.33dip"
                    android:textColor="@color/a_text_787878_60_selector"
                    android:textSize="@dimen/a_text_size_30"
                    android:visibility="visible"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_fan_top"
                android:contentDescription="@string/app_name"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/item_recomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_fan_recoment"
                android:contentDescription="@string/app_name"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/a_text_color_333333"
                android:textSize="@dimen/a_text_size_40"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_picture_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/a_bg_color_000000"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:autoLink="web"
            android:textColorLink="@color/a_text_color_da500e"
            android:drawablePadding="20dip"
            android:ellipsize="end"
            android:lineSpacingExtra="3dip"
            android:text=""
            android:textColor="@color/a_text_color_666666"
            android:textSize="@dimen/a_text_size_36"/>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="10dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip">

            <ImageView
                android:id="@+id/item_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="6dip"
                android:src="@drawable/bg_parise_btn_selector"/>

            <TextView
                android:id="@+id/item_support_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/item_support"
                android:text="0"
                android:textColor="@color/a_text_color_ababab"
                android:textSize="@dimen/a_text_size_30"/>

            <View
                android:id="@+id/item_line1"
                style="@style/divider_vertical"
                android:layout_height="22dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_support_num"/>

            <TextView
                android:id="@+id/item_replay_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_line1"
                android:drawableLeft="@drawable/btn_comment_selector"
                android:drawablePadding="8dip"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/a_text_color_ababab"
                android:textSize="@dimen/a_text_size_30"/>

            <View
                android:id="@+id/item_line2"
                style="@style/divider_vertical"
                android:layout_height="22dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/item_replay_num"/>

            <ImageView
                android:id="@+id/item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/item_line2"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="6dip"
                android:src="@drawable/btn_post_share_selector"/>

            <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:padding="6dip"
                android:src="@drawable/btn_fan_post_more_selector"
                android:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/trans"/>

    <TextView
        android:id="@+id/item_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dip"
        android:text="@string/relay_tip"
        android:textColor="@color/a_text_color_a0a0a0"
        android:textSize="@dimen/a_text_size_40"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_flush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subject_list_item_selector"
        android:gravity="center_horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="@string/commutity_click_flush"
        android:textColor="@color/a_text_color_a0a0a0"
        android:textSize="@dimen/a_text_size_40"
        android:visibility="gone"/>

</LinearLayout>