<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subject_list_item_selector"
    android:orientation="vertical"
    android:paddingLeft="12dip"
    android:paddingRight="12dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63.33dip"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="46dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_menber_logo"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="@drawable/bg_user_default"
                android:contentDescription="@string/app_name" >
            </ImageView>

            <TextView
                android:id="@+id/item_menber_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:text="神码饭"
                android:textColor="@color/a_text_color_ffffff"
                android:textSize="@dimen/a_text_size_30" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_lv_focus_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13.33dp"
                    android:ellipsize="end"
                    android:text="safds"
                    android:textColor="@color/a_text_color_ffa200"
                    android:textSize="@dimen/a_text_size_42" />

                <ImageView
                    android:id="@+id/item_user_level"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.33dp"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_lv_focus_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:layout_marginTop="6dip"
                android:ellipsize="end"
                android:text="safds"
                android:textColor="@color/a_text_color_999999"
                android:textSize="@dimen/a_text_size_32" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_user_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.33dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_chexiao"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_user_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.33dp"
            android:contentDescription="@string/app_name"
            android:text="@string/commutity_user_ban_tip"
            android:textColor="@color/a_text_color_999999"
            android:textSize="@dimen/a_text_size_32"
            android:visibility="visible" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

</LinearLayout>