<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dip"
        android:background="@drawable/icon_empty"/>
    <TextView
        android:id="@+id/live_connect_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dip"
        android:gravity="center"
        android:text="@string/live_connect_request_empty"
        android:textColor="@color/a_text_color_666666"
        android:textSize="@dimen/a_text_size_36"/>
</LinearLayout>