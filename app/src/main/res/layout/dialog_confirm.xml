<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_confrim_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_confirm_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="3dip"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="哎呀~网络没有连接,是否去设置网络?"
        android:textColor="@color/a_text_color_909090"
        android:textSize="@dimen/a_text_size_45" />

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="1px" >

        <Button
            android:id="@+id/dialog_confirm_btn_left"
            style="@style/btn_confrim"
            android:text="@string/cancel"
            android:visibility="visible" />

        <View style="@style/divider_vertical" />

        <Button
            android:id="@+id/dialog_confirm_btn_right"
            style="@style/btn_confrim"
            android:text="确认"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>