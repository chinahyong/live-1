<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/more_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/more_layout1"
        android:layout_width="match_parent"
        android:layout_height="179.66dp"
        android:layout_above="@+id/more_layout_close"
        android:background="@color/a_bg_color_f2f0f5"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more_record_live"
                android:layout_width="81.33dp"
                android:layout_height="81.33dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/btn_record_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6.66dp"
                android:gravity="center"
                android:text="@string/live_record_live"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_51"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61.33dp"
            android:layout_marginTop="37dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more_live"
                android:layout_width="81.33dp"
                android:layout_height="81.33dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/btn_live_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6.66dp"
                android:gravity="center"
                android:text="@string/live_common_live"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_51"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/more_layout_close"
        android:layout_width="match_parent"
        android:layout_height="57.33dp"
        android:layout_alignParentBottom="true"
        android:background="@color/a_bg_color_ffffff">

        <ImageView
            android:id="@+id/more_close"
            android:layout_width="22.66dp"
            android:layout_height="22.66dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_live_begin_close_selector"/>
    </RelativeLayout>

</RelativeLayout>