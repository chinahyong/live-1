<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/account_sale_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bgm_low"
              android:orientation="vertical">

    <include android:id="@+id/common_top_layout" layout="@layout/a_common_top_bar"
             android:background="@color/trans"/>
    <ImageView
        android:id="@+id/account_sale_level_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57dip"
        android:src="@drawable/icon_low"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/account_sale_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17.33dp"
        android:text="@string/setting_account_sale_level_low"
        android:textColor="@color/a_text_color_ffffff"
        android:textSize="@dimen/a_text_size_48"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="26dp"
        android:text="@string/setting_account_sale_warn"
        android:textColor="@color/a_text_color_ffffff"
        android:textSize="@dimen/a_text_size_42"/>

    <Button
        android:id="@+id/account_sale_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54.66dip"
        android:background="@drawable/btn_accout_bind"
        android:text="@string/setting_account_bind_tip"
        android:textColor="@color/a_text_color_333333"
        android:textSize="@dimen/a_text_size_48"
        android:textStyle="bold"/>

    <View android:layout_width="match_parent" android:layout_height="0dip"
          android:layout_weight="1"/>
    <ImageView
        android:id="@+id/account_sale_buttom_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bgm_low_bolang"
        android:visibility="visible"/>
</LinearLayout>