<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="292dp"
        android:layout_height="392dp">
        <RelativeLayout
            android:id="@+id/private_message_help_head_layout"
            android:background="@drawable/bg_private_message_help"
            android:layout_width="match_parent"
            android:layout_height="49.67dp">
            <TextView
                android:layout_marginLeft="17.33dp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:text="获取私信卡分成收益的步骤:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/bg_private_message_helpe_down"
            android:layout_below="@id/private_message_help_head_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20.67dp"
            android:id="@+id/private_message_help_body_text1_layout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/private_message_help_body_text1_one"
                android:textColor="#da500e"
                android:textSize="16sp"
                android:text="第一步："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_toRightOf="@id/private_message_help_body_text1_one"
                android:id="@+id/private_message_help_body_text1_two"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="给粉丝发私信"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="14dp"
            android:layout_marginLeft="20.67dp"
            android:id="@+id/private_message_help_body_text2_layout"
            android:layout_below="@id/private_message_help_body_text1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/private_message_help_body_text2_one"
                android:textColor="#da500e"
                android:textSize="16sp"
                android:text="第二步："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/private_message_help_body_text2_one"
                android:id="@+id/private_message_help_body_text2_two"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="粉丝使用私信卡回应你"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="19dp"
            android:layout_marginLeft="20.67dp"
            android:id="@+id/private_message_help_body_text3_layout"
            android:layout_below="@id/private_message_help_body_text2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/private_message_help_body_text3_one"
                android:textColor="#666666"
                android:textSize="13.67dp"
                android:text="你就能获得私信卡的分成收益啦！分成同直"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/private_message_help_body_text3_one"
                android:id="@+id/private_message_help_body_text3_two"
                android:textColor="#666666"
                android:textSize="13.67dp"
                android:text="播间礼物哦。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/private_message_help_body_text4_layout"
            android:layout_marginLeft="20.67dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/private_message_help_body_text3_layout"
            android:layout_width="wrap_content"
            android:layout_height="88dp">
            <ImageView
                android:id="@+id/private_message_img"
                android:src="@drawable/sixinka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#da500e"
                android:textSize="19.33dp"
                android:text="19999"
                android:id="@+id/private_message_19999"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/private_message_img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#666666"
                android:textSize="17dp"
                android:text="克拉"
                android:id="@+id/private_message_paopao"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/private_message_19999"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20.67dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/private_message_help_body_text4_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/private_message_help_body_text4_one"
                android:textSize="13.67dp"
                android:textColor="#da500e"
                android:text="温馨提示："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/private_message_help_body_text4_one"
                android:id="@+id/private_message_help_body_text4_two"
                android:textSize="13.67dp"
                android:textColor="#666666"
                android:text="您每天可以给100个未对您使用私信卡的粉"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/private_message_help_body_text4_two"
                android:id="@+id/private_message_help_body_text4_three"
                android:textSize="13.67dp"
                android:textColor="#666666"
                android:text="丝发送私信，每个粉丝可发3条私信。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>