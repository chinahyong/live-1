            android:textSize="@dimen/a_text_size_70" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/edt_input_frame" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/a_button_gift_height_bg_160"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/giftnumClear"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center"
            android:text="清除"
            android:textColor="@color/a_text_color_5f5f5f"
            android:textSize="@dimen/a_text_size_70" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/edt_input_frame" />

        <TextView
            android:id="@+id/giftnum0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a_main_item_selector"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/a_text_color_5f5f5f"
            android:textSize="@dimen/a_text_size_70" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/edt_input_frame" />

        <ImageView
            android:id="@+id/giftnumBack"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/a_main_item_selector"
            android:scaleType="center"
            android:src="@drawable/icon_gift_num_delet" />
    </LinearLayout>

</LinearLayout>