<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_conversation_more"
              android:orientation="horizontal">
    <TextView
        android:id="@+id/copy"
        android:layout_width="80dip"
        android:layout_height="36dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/rongcloud_conversation_copy_tip"
        android:textColor="@color/a_text_ffffff_80ffffff_selector"
        android:textSize="@dimen/a_text_size_42"/>
    <View
        android:id="@+id/line"
        android:layout_width="1dip"
        android:layout_height="36dip"
        android:background="@color/a_bg_color_ffffff"/>
    <TextView
        android:id="@+id/delete"
        android:layout_width="80dip"
        android:layout_height="36dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/rongcloud_conversation_delete_tip"
        android:textColor="@color/a_text_ffffff_80ffffff_selector"
        android:textSize="@dimen/a_text_size_42"/>

</LinearLayout>
