<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_fan_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.33dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/bg_fan_list_selector"
        android:paddingBottom="10dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/item_fanquan_logo"
            android:layout_width="53.33dp"
            android:layout_height="53.33dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_user_default"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_fanquan_logo_lock"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_user_default"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/icon_lock_1" />

        <RelativeLayout
            android:id="@+id/item_fanquan_nickname_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/item_fanquan_logo" >

            <TextView
                android:id="@+id/item_fanquan_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股水电"
                android:textColor="@color/a_text_color_666666"
                android:textSize="@dimen/a_text_size_36"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_fanquan_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fanquan_nickname"
                android:layout_marginTop="4dip"
                android:gravity="center_vertical"
                android:textColor="@color/a_text_color_b0b0b0"
                android:textSize="@dimen/a_text_size_30" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>